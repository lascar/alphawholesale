<div class="row small-font">
  <div class="card col-3">
    <div class="card-header text-center text-uppercase">
      <%= t("views.user_products.names") + t("views.with_count", count: @user_products.count) %> :
    </div>
    <div class="card-body">
      <table class="table table-responsive table-hover table-all">
        <thead>
          <tr>
            <th scope="col" class="text-truncate"
             title="<%= t('views.user_products.product_name') %>">
              <%= t("views.user_products.product_name") %>
            </th>
          </tr>
        </thead>

        <tbody>
          <% @user_products.each do |product| %>
            <tr>
              <td class="text-truncate"
                  title="<%= t("views.user_products.product_name") + " " +
                    t("products." + product + ".name") %>">
                <%= t("products." + product + ".name") %>
              </td>
            <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <%= link_to t("views.user_products.index"),
      path_for(user: @user, path: "user_products"),
      id: "user_products", class:  "btn btn-primary btn-sm" %>
  </div>
  <div class="col-1">
  </div>
  <div class="card col-8">
    <div class="card-header text-center text-uppercase">
      <%= t("views.attached_products.names") + t("with_count", count: @attached_products.count) %> :
    </div>
    <div class="card-body">
      <table class="table table-responsive table-hover table-all">
        <thead>
          <tr>
            <th scope="col" class="text-truncate"
             title="<%= t('views.attached_products.product_name') %>">
              <%= t("views.attached_products.product_name") %>
            </th>
            <th scope="col" class="text-truncate"
             title="<%= t('views.attached_products.variety_name') %>">
              <%= t("views.variety_name") %>
            </th>
            <th scope="col" class="text-truncate"
             title="<%= t('views.attached_products.aspect_name') %>">
              <%= t("views.attached_products.aspect_name") %>
            </th>
            <th scope="col" class="text-truncate"
             title="<%= t('views.attached_products.packaging_name') %>">
              <%= t("views.attached_products.packaging_name") %>
            </th>
            <th scope="col" class="text-truncate"
             title="<%= t('views.attached_products.size_name') %>">
              <%= t("views.attached_products.size_name") %>
            </th>
            <th scope="col" class="text-truncate"
             title="<%= t('views.attached_products.caliber_name') %>">
              <%= t("views.attached_products.caliber_name") %>
            </th>
          </tr>
        </thead>

        <tbody>
          <% @attached_products.each do |attached_product| %>
            <tr>
              <td class="text-truncate"
                  title="<%= t("views.attached_products.product_name") + " " +
                    t("products." + attached_product.product + ".name") %>">
                <%= t("products." + attached_product.product + ".name") %>
              </td>
              <td id="<%= attached_product.product + '_variety_' +
                attached_product.variety %>"class="text-truncate"
                  title="<%= t('views.attached_products.product_name') + ' ' +
                    t('products.' + attached_product.product + ".varieties." +
                      attached_product.variety) %>">
                <%= t('products.' + attached_product.product + ".varieties." +
                      attached_product.variety) %>
              </td>
              <td id="<%= attached_product.product + '_aspect_' +
                attached_product.aspect %>"class="text-truncate"
                  title="<%= t('views.attached_products.product_name') + ' ' +
                    t('products.' + attached_product.product + ".aspects." +
                      attached_product.aspect) %>">
                <%= t('products.' + attached_product.product + ".aspects." +
                      attached_product.aspect) %>
              </td>
              <td id="<%= attached_product.product + '_packaging_' +
                attached_product.packaging %>"class="text-truncate"
                  title="<%= t('views.attached_products.product_name') + ' ' +
                    t('products.' + attached_product.product + ".packagings." +
                      attached_product.packaging) %>">
                <%= t('products.' + attached_product.product + ".packagings." +
                      attached_product.packaging) %>
              </td>
              <td id="<%= attached_product.product + '_size_' +
                attached_product.size %>"class="text-truncate"
                  title="<%= t('views.attached_products.product_name') + ' ' +
                    t('products.' + attached_product.product + ".sizes." +
                      attached_product.size) %>">
                <%= t('products.' + attached_product.product + ".sizes." +
                      attached_product.size) %>
              </td>
              <td id="<%= attached_product.product + '_caliber_' +
                attached_product.caliber %>"class="text-truncate"
                  title="<%= t('views.attached_products.product_name') + ' ' +
                    t('products.' + attached_product.product + ".calibers." +
                      attached_product.caliber) %>">
                <%= t('products.' + attached_product.product + ".calibers." +
                      attached_product.caliber) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <%= link_to t("views.attached_products.index"), path_for(user: @user, path: "attached_products"),
      id: "attached_products", class:  "btn btn-primary btn-sm" %>
  </div>
</div>
