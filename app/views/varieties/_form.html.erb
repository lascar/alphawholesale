<%= form_for(variety, local: true) do |form| %>
  <% if variety.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(variety.errors.count, "error") %> <%= t("varieties.prohibited_variety_saved") %></h2>

      <ul>
      <% variety.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label_tag :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= label_tag :product %>
    <%= form.select :product_id, @products %>
  </div>

  <% if broker_signed_in? %>
    <div class="field">
      <%= label_tag :supplier %>
      <%= form.select :supplier_id, @suppliers %>
    </div>

    <div class="field">
      <%= form.label :approved %>
      <%= form.check_box :approved %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
