<h1><%= t("models.order.name") + t("count", count: @orders.count) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("models.attributes.product.name") %></th>
      <th><%= t("models.attributes.order.quantity") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order[:product_name] %></td>
        <td>
          <%= order[:quantity] %>
        </td>
        <td><%= link_to t("show"), order_show_path(order[:id]) %></td>
        <td><%= link_to t("edit"), order_edit_path(order[:id]) %></td>
        <td>
          <%= link_to t("destroy"), order_show_path(order), method: :delete,
               data: { confirm: t(:are_you_sure) } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @supplier_id %>
  <br>
  <%= link_to t("supplier.page"), supplier_path(@supplier_id) %>
<% end %>
<% if @customer_id %>
  <br>
  <%= link_to t("customer.page"), customer_path(@customer_id) %>
<% end %>
