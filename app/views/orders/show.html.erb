<div class="card">
  <div class="row">
    <div class="col-3">
      <strong><%= Offer.human_attribute_name("product") %>:</strong>
      <%= @offer.product.name %>
    </div>

    <div class="col-3">
      <strong><%= Product.human_attribute_name("variety") %>:</strong>
      <%= @offer.variety ? @offer.variety.name : "" %>
    </div>

    <div class="col-3">
      <strong><%= Offer.human_attribute_name("aspect") %>:</strong>
      <%= @offer.aspect ? @offer.aspect.name : "" %>
    </div>

    <div class="col-3">
      <strong><%= Offer.human_attribute_name("packaging") %>:</strong>
      <%= @offer.packaging ? @offer.packaging.name : "" %>
    </div>
  </div>
</div>

<div class="card">
  <div class="row">
    <div class="col-3">
      <strong><%= Order.human_attribute_name("quantity") %>:</strong>
      <%= @order.quantity.to_s + " " + t("unit_types." + @offer.supplier.unit_type +
          ".symbol")%>
    </div>

    <% if !customer_signed_in? %>
      <div class="col-3">
        <strong><%= Offer.human_attribute_name("unit_price_supplier") %>:</strong>
        <%= @offer.unit_price_supplier.to_s + " " +
          t("currencies." + @offer.supplier.currency + ".symbol") %>
      </div>
    <% end %>

    <% if !supplier_signed_in? %>
      <div class="col-3">
        <strong><%= Offer.human_attribute_name("unit_price_broker") %>:</strong>
        <%= @offer.unit_price_broker.to_s + " " +
          t("currencies." + @offer.supplier.currency + ".symbol") %>
      </div>
    <% end %>


  </div>
</div>

<div class="card">
  <div class="row">
    <div class="col-3">
      <strong><%= Offer.human_attribute_name("incoterm") %>:</strong>
      <%= @offer.incoterm %>
    </div>

    <% if !customer_signed_in? %>
      <div class="col-3">
        <strong><%= Offer.human_attribute_name("localisation_supplier") %>:</strong>
        <%= @offer.localisation_supplier %>
      </div>
    <% end %>

    <% if !supplier_signed_in? %>
      <div class="col-3">
        <strong><%= Offer.human_attribute_name("localisation_broker") %>:</strong>
        <%= @offer.localisation_broker %>
      </div>
    <% end %>

    <div class="col-3">
      <strong><%= Order.human_attribute_name("approved") %></strong>
      <%= check_box_tag :approved, '', @order.approved, disabled: true %>
    </div>

  </div>
</div>

<div class="card">
  <div class="row">
    <div class="col">
      <strong><%= Offer.human_attribute_name("observation") %>:</strong>
      <%= simple_format(@offer.observation) %>
    </div>
  </div>
</div>

<div class="card">
  <div class="row">
    <div class="col">
      <strong><%= Order.human_attribute_name("customer_observation") %>:</strong>
      <%= simple_format(@order.customer_observation) %>
    </div>
  </div>
</div>

