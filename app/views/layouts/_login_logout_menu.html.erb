<ul class="nav nav-pills pull-right">
  <%= user_logged(user_type) %>
  <% if !user_type.empty? %>
    <li>
      <%= link_to icon('fas', 'fa-sign-out-alt', class: "icon-white") + " " +
          t("views." + user_type.pluralize + ".name"), session_destroy_path(user_type.to_sym),
          method: :delete, title: t("devise.action.signout"),
          class: "btn btn-primary btn-sm" %>
    </li>
  <% else %>
    <% ["supplier", "customer"].each do |type| %>
      <li>
        <%= link_to icon('fas', 'fa-sign-in-alt', 'icon-white') + " " +
            t("views." + type.pluralize + ".name"),
            session_new_path(type.to_sym),
            title: t("devise.action." + type + ".signin"),
            class: "btn btn-primary btn-sm" %>
      </li>
      <li>
        <%= link_to icon('fas', 'fa-user-plus') + " " +
            t("views." + type.pluralize + ".name"),
            no_session_registration_path(type.to_sym),
            title: t("devise.action." + type + ".signup"),
            class: "btn btn-secondary btn-sm" %>
      </li>
    <% end %>
  <% end %>
</ul>
