<h1><%= t("models.customer.name") + t("with_count", count: @customers.count) %></h1>

<table class="table-all table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t("models.attributes.customer.identifier") %></th>
      <th><%= t("models.attributes.customer.email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.identifier %></td>
        <td><%= customer.email %></td>
        <td>
          <%= link_to icon('fas', 'fa-eye'), path_for(user: "customer",
          path: "user", options: {debug: true, object_id: customer.id}), title: t("show") %>
        </td>
        <td>
          <%= link_to icon('fas', 'fa-edit'), path_for(user: "customer",
          path: 'edit_user', options: {object_id: customer.id}), title: t("edit") %>
        </td>
        <td>
          <%= link_to icon('fas', 'fa-trash'), path_for(user: "customer",
          path: "user", options: {object_id: customer.id}), title: t("destroy"),
          method: :delete, data: { confirm: t(:are_you_sure) } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("customer.new"), path_for(user: "customer", path: "new_user") %>
