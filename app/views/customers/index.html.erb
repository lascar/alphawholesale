<h1><%= Customer.model_name.human(count: 2) %></h1>

<table class="table-all table-bordered table-hover">
  <thead>
    <tr>
      <th><%= Customer.human_attribute_name("identifier") %></th>
      <th><%= Customer.human_attribute_name("email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.identifier %></td>
        <td><%= customer.email %></td>
        <td><%= link_to t("show"), customer %></td>
        <td><%= link_to t("edit"), edit_customer_path(customer) %></td>
        <td><%= link_to t("destroy"), customer, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

