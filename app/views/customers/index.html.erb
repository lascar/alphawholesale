<h1><%= t("models.customer.name") + t("count", count: @customers.count) %></h1>

<table class="table-all table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t("models.attributes.customer.identifier") %></th>
      <th><%= t("models.attributes.customer.email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.identifier %></td>
        <td><%= customer.email %></td>
        <td><%= link_to icon('fas', 'fa-eye'), customer, title: t("show") %></td>
        <td><%= link_to icon('fas', 'fa-edit'), edit_customer_path(customer),
          title: t("edit") %></td>
        <td><%= link_to icon('fas', 'fa-trash'), customer,
         title: t("destroy"), method: :delete,
         data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("customer.new"), new_customer_path %>
