<%# binding.pry %>
<h1><%= Customer.model_name.human(count: 2) %></h1>

<table class="table-all table-bordered table-hover">
  <thead>
    <tr>
      <th><%= Customer.human_attribute_name("identifier") %></th>
      <th><%= Customer.human_attribute_name("email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.identifier %></td>
        <td><%= customer.email %></td>
        <td><%= link_to icon('fas', 'eye'), customer, title: t("show") %></td>
        <td><%= link_to icon('fas', 'edit'), edit_customer_path(customer),
          title: t("edit") %></td>
        <td><%= link_to icon('fas', 'trash'), customer,
         title: t("destroy"), method: :delete,
         data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("customer.new"), new_customer_path %>
