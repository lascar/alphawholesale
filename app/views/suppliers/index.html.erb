h1><%= t("views.suppliers.names") + t("views.with_count", count: @suppliers.count) %></h1>

<table class="table-all table-bordered table-hover">
  <thead>
    <tr>
      <th><%= t("views.suppliers.identifier") %></th>
      <th><%= t("views.suppliers.email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.identifier %></td>
        <td><%= supplier.email %></td>
        <td>
          <%= link_to icon('fas', 'fa-eye'), path_for(user: supplier, path: "user"),
            title: t("views.suppliers.show") %>
        </td>
        <td>
          <%= link_to icon('fas', 'fa-edit'),
            path_for(user: supplier, path: 'edit_user'), title: t("views.suppliers.edit") %>
        </td>
        <td><%= link_to icon('fas', 'fa-trash'), path_for(user: supplier, path: "user"),
         title: t("views.suppliers.destroy"), method: :delete,
         data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to t("views.suppliers.new"), new_supplier_registration_url %>
