<%# byebug %>
<h2><%= t("devise.action.signup") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= t("required_fields") %>
  <div class="field">
    <%= f.label :identifier %>*<br />
    <%= f.text_field :identifier, autofocus: true, autocomplete: "identifier",
        required: true %>
  </div>

  <div class="field">
    <%= f.label :email %>*<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
        required: true %>
  </div>

  <div class="field">
    <%= f.label :entreprise_name %>*
    <%= f.text_field :entreprise_name, required: true %>
  </div>

  <div class="field">
    <%= f.label :tin %>*
    <%= f.text_field :tin, required: true %>
  </div>

  <div class="field">
    <%= f.label :street_and_number %>
    <%= f.text_field :street_and_number %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :country %>*
    <%= f.text_field :country, required: true %>
  </div>

  <div class="field">
    <%= f.label :telephone_number1 %>
    <%= f.text_field :telephone_number1 %>
  </div>

  <div class="field">
    <%= f.label :telephone_number2 %>
    <%= f.text_field :telephone_number2 %>
  </div>

  <div class="field">
    <%= f.label :password %>*
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t("devise.messages.password_minimum_length") %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>*<br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <div class="actions">
    <%= f.submit t("devise.action.signup") %>
  </div>
<% end %>

<%= render "suppliers/shared/links" %>
