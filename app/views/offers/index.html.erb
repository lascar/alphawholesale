<h1><%= Offer.model_name.human(count: 2) %></h1>

<div class="card">
  <table class="table-all table-bordered table-responsive">
    <thead>
      <tr>
        <th><%= Offer.human_attribute_name("product") %></th>
        <th><%= Offer.human_attribute_name("quantity") %></th>
        <% if !customer_signed_in? %>
          <th><%= Offer.human_attribute_name("unit_price_supplier") %></th>
        <% end %>
        <% if !supplier_signed_in? %>
          <th><%= Offer.human_attribute_name("unit_price_broker") %></th>
        <% end %>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @offers.each do |offer| %>
        <tr>
          <%# binding.pry %>
          <td><%= offer[:product_name] %></td>
          <td><%= offer[:quantity] %></td>
          <% if !customer_signed_in? %>
            <td>
              <%= offer[:supplier_price] %>
            </td>
          <% end %>
          <% if !supplier_signed_in? %>
            <td>
              <%= offer[:broker_price] %>
            </td>
          <% end %>
          <td>
            <%= link_to icon('fas', 'fa-eye'), offer_show_path(offer[:id]),
                                            title: t("show") %>
          </td>
          <td>
            <%= link_to icon('fas', 'fa-edit'), offer_edit_path(offer[:id]),
                                            title: t("edit") %>
          </td>
          <td>
            <%= link_to icon('fas', 'fa-trash'), offer_show_path(offer[:id]),
              method: :delete, data: { confirm: t(:are_you_sure) },
              title: t("destroy") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<% if !customer_signed_in? %>
  <%= link_to t("offers.new"), offer_new_path, {title: t("offers.new")} %>
<% end %>
<% if @supplier_id %>
  <br>
  <%= link_to t("supplier.page"), supplier_path(@supplier_id) %>
<% end %>
