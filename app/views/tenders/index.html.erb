<h1><%= Tender.model_name.human(count: 2) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Tender.human_attribute_name("date_start") %></th>
      <th><%= Tender.human_attribute_name("date_end") %></th>
      <th><%= Tender.human_attribute_name("total") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenders.each do |tender| %>
      <tr>
        <td><%= tender.date_start %></td>
        <td><%= tender.date_end %></td>
        <td><%= tender.total %></td>
        <td><%= link_to t("show"), tender_show_path(@customer_id, tender) %></td>
        <td><%= link_to t("edit"), tender_edit_path(@customer_id, tender) %></td>
        <td><%= link_to t("destroy"), tender_show_path(@customer_id, tender), method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("tenders.new"), tender_new_path(@customer_id) %>
<% if @customer_id %>
  <br>
  <%= link_to t("customer.page"), customer_path(@customer_id) %>
<% end %>
