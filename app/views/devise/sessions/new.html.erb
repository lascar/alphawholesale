<h2><%= t("devise.action.login") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.text_field :identifier, autofocus: true, autocomplete: "identifier",
      placeholder: t("views." + resource_name.pluralize + ".identifier") %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password",
      placeholder: t("views." + resource_name.pluralize + ".current_password") %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, t("views.remember_me") %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t("device.action.login") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
