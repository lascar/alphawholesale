<h2><%= t("devise.action.login") %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.text_field :identifier, autofocus: true, autocomplete: "identifier", placeholder: t("models.attributes.supplier.identifier") %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: t("models.attributes.customer.password") %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
