<h2>
  <%= t("views." + resource_name.pluralize . ".name") + " " + resource_name.identifier %>
</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
             html: { method: :put }) do |form| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= form.label :identifier, t("views." + resource_name.pluralize . ".identifier") %><br />
    <%= form.identifier_field :identifier, autofocus: true, autocomplete: "identifier" %>
  </div>

  <div class="field">
    <%= form.label :email, t("views." + resource_name.pluralize . ".email") %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t("devise.messages.currenty_waiting_confirmation_for") + " : " +
      resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= form.label :password %> <i><%= t("devise.messages.leave_blank_if_not_change") %></i><br />
    <%= form.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length + " " + t("devise.messages.password_minimum_length") %></em>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= form.label :current_password %> <i>(<%= t("devise.messages.need_password_confirm_change") %>)</i><br />
    <%= form.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= form.submit t("devise.action.update") %>
  </div>
<% end %>

<h3><%= t("devise.messages.cancel_account") %></h3>

<p><%= t("devise.messages.unhappy") %>? <%= button_to  t("devise.messages.cancel_account"),
  registration_path(resource_name), data: { confirm: t("views.are_you_sure") }, method: :delete %></p>

<%= link_to t("views.back"), :back %>
