<p id="notice"><%= notice %></p>

<h1>Attach Products</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attached_products.each do |attached_product| %>
      <% product = attached_product.product %>
      <tr id="product_<%= product.id.to_s %>">
        <td><%= product.name %></td>
        <td><%= product.reference %></td>
      </tr>
      <tr>
        <td><%= link_to "Show", attached_product %></td>
        <td><%= link_to "Edit", edit_attached_product_path(attached_product) %></td>
        <td><%= link_to "Destroy", attached_product, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Attach Product", new_attached_product_path, id: "new_attached_product" %>
