<h1><%= t("views.attached_products.edit") %></h1>
</br>
<%= form_tag(path_for(user: @user, path: 'attached_products'),
  authenticity_token: true, method: :put) do -%>
  <%= label_tag :product %>
  <div class="row">
      <div class="card">
        <table class="table-all table-bordered table-responsive">
          <thead>
            <tr>
              <th><%= t('views.attached_products.product_name') %></th>
              <th><%= t('views.attached_products.variety_name') %></th>
              <th><%= t('views.attached_products.aspect_name') %></th>
              <th><%= t('views.attached_products.packaging_name') %></th>
              <th class="table-icons-1" colspan="1"></th>
            </tr>
          </thead>

          <tbody>
            <% for attached_product in @attached_products %>
              <tr>
                <% product_name = attached_product[:product_name] %>
                <% variety_name = attached_product[:variety_name] ?
                  t("product.variety." + product_name + "." + attached_product[:variety_name].to_s,
                    default: t("product.variety.nil")) :
                   t("product.variety.nil") %>
                <% aspect_name = attached_product[:aspect_name] ?
                  t("product.aspect." + product_name + "." + attached_product[:aspect_name].to_s,
                    default: t("product.aspect.nil")) :
                   t("product.aspect.nil") %>
                <% packaging_name = attached_product[:packaging_name] ?
                  t("product.packaging." + product_name + "." + attached_product[:packaging_name].to_s,
                    default: t("product.packaging.nil")) :
                   t("product.packaging.nil") %>
                <td><%= t("product.name." + product_name) %></td>
                <td><%= variety_name %></td>
                <td><%= aspect_name %></td>
                <td><%= packaging_name %></td>
                <td>
                  <%= check_box_tag "attached_products[]",
                   attached_product[:id],
                   attached_product[:is_attached],
                   id: "attached_product_" + attached_product[:id].to_s %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>

  <div><%= submit_tag t("views.attached_products.save") %></div>
<% end -%>

<%= link_to t("views.attached_products.show"), @attached_product %> |
<%= link_to t("views.back"), :back %>
