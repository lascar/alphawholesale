<h1><%= t("models.broker.name") + t("count", count: @brokers.count) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("models.attributes.broker.identifier") %></th>
      <th><%= t("models.attributes.broker.email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brokers.each do |broker| %>
      <tr>
        <td><%= broker.identifier %></td>
        <td><%= broker.email %></td>
        <td><%= link_to t("show"), broker %></td>
        <td>
          <%= link_to t("edit"), path_for(user: broker, path: 'edit_broker'),
            options: {object_id: broker.id}) %></td>
        <td>
          <%= link_to t("destroy"), broker, method: :delete,
           data: { confirm: t(:are_you_sure) } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("brokers.new"), path_for(path: 'new_broker')) %>
