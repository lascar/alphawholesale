<h1><%= t("views.brokers.names") + " : " + t("views.with_count", count: @brokers.count) %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("views.brokers.identifier") %></th>
      <th><%= t("views.brokers.email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brokers.each do |broker| %>
      <tr>
        <td><%= broker.identifier %></td>
        <td><%= broker.email %></td>
        <td><%= link_to t("views.brokers.show"), broker %></td>
        <td>
          <%= link_to t("views.brokers.edit"), path_for(user: broker, path: 'edit_broker'),
            options: {object_id: broker.id}) %></td>
        <td>
          <%= link_to t("views.brokers.destroy"), broker, method: :delete,
           data: { confirm: t("views.are_you_sure") } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.brokers.new"), path_for(path: 'new_broker')) %>
