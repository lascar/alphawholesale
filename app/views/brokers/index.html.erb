<h1><%= Broker.model_name.human(count: 2) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Broker.human_attribute_name("identifier") %></th>
      <th><%= Broker.human_attribute_name("email") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brokers.each do |broker| %>
      <tr>
        <%# byebug %>
        <td><%= broker.identifier %></td>
        <td><%= broker.email %></td>
        <td><%= link_to t("show"), broker %></td>
        <td><%= link_to t("edit"), edit_broker_path(broker) %></td>
        <td><%= link_to t("destroy"), broker, method: :delete, data: { confirm: t(:are_you_sure) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("brokers.new"), new_broker_path %>
