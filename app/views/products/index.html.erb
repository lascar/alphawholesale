<h1><%= Product.model_name.human(count: @products.count) %></h1>

<table class="table-all table-bordered">
  <thead>
    <tr>
      <th><%= Product.human_attribute_name("name") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td>
          <%= link_to icon('fas', 'fa-eye'), product, title: t("show") %>
        </td>
        <td>
          <%= link_to icon('fas', 'fa-edit'), edit_product_path(product),
           title: t("edit") %>
        </td>
        <td>
          <%= link_to icon('fas', 'fa-trash'), product, title: t("destroy"),
           method: :delete, data: { confirm: t(:are_you_sure) } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("products.new"), products_get_names_path %>
