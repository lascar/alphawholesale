<h1><%= t("models.product.name") + t("with_count", count: @products.count) %></h1>

<table class="table-all table-bordered">
  <thead>
    <tr>
      <th><%= t("models.attributes.product.name") %></th>
      <% if broker_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td>
          <%= link_to icon('fas', 'fa-eye'), product, title: t("show") %>
        </td>
        <% if broker_signed_in? %>
          <td>
            <%= link_to icon('fas', 'fa-edit'), edit_product_path(product),
             title: t("edit") %>
          </td>
          <td>
            <%= link_to icon('fas', 'fa-trash'), product, title: t("destroy"),
             method: :delete, data: { confirm: t(:are_you_sure) } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

